pipeline {
    agent any

    environment {
        FRONTEND_IMAGE = "my-frontend-app"
        BACKEND_IMAGE = "my-backend-app"
        NETWORK_NAME = "app-network"
    }

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/Sanjuraghava/react-app.git'
            }
        }

        stage('Build Docker Images') {
            steps {
                sh 'docker build -t $FRONTEND_IMAGE ./frontend'
                sh 'docker build -t $BACKEND_IMAGE ./backend'
            }
        }

        stage('Create Docker Network') {
            steps {
                sh 'docker network create $NETWORK_NAME || true'
            }
        }

        stage('Stop Existing Containers') {
            steps {
                sh '''
                docker rm -f frontend || true
                docker rm -f backend || true
                '''
            }
        }

        stage('Run Containers') {
            steps {
                sh '''
                docker run -d --name backend --network $NETWORK_NAME $BACKEND_IMAGE
                docker run -d --name frontend --network $NETWORK_NAME -p 3000:3000 $FRONTEND_IMAGE
                '''
            }
        }

        stage('Wait & Show Access Info') {
            steps {
                echo '‚è≥ Waiting for frontend to start...'
                sh 'sleep 5'
                echo '=============================================='
                echo '‚úÖ‚úÖ‚úÖ  React App is running at:'
                echo '‚û°Ô∏è‚û°Ô∏è   http://10.78.98.23:3000'
                echo '=============================================='
            }
        }
    }

    // Optional cleanup block ‚Äì enable if needed
    /*
    post {
        always {
            echo 'üßπ Cleaning up containers...'
            sh '''
            docker rm -f frontend || true
            docker rm -f backend || true
            docker network rm $NETWORK_NAME || true
            '''
        }
    }
    */
}
